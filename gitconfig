[push]
	default = tracking
[color]
	ui = true
[init]
	templatedir = ~/.git_template
[core]
	excludesfile = ~/.gitignore
[user]
	name = Stefan Lindbohm
	email = stefan@kolizz.com
	signingkey = 55572B41
[commit]
	gpgsign = true
[alias]
	up = pull --ff-only --prune
	wipe = !git reset HEAD --hard && git clean -f
	llog = !git log `git rev-parse --abbrev-ref --symbolic-full-name @{upstream}`..
	blog = log master..
[pretty]
	compact = %C(auto)%h %cd %d %s (%aN)%Creset
[format]
	pretty = compact
[log]
	date = short
