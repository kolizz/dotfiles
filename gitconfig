[commit]
	gpgsign = true
[alias]
	up = pull --ff-only --prune
	wipe = !git reset HEAD --hard && git clean -f
	clog = log --pretty=format:'%C(yellow)%h%Creset  %ci %Cred%d%Creset %s (%aN)' --date=local
  llog = !git clog `git rev-parse --abbrev-ref --symbolic-full-name @{upstream}`..head
  undo = reset HEAD~1
[core]
	excludesfile = /Users/kolizz/.gitignore
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = Kaleidoscope
[diff]
	tool = Kaleidoscope
